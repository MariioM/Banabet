<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Banabet.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Banabet"
    Shell.FlyoutBehavior="Disabled"
    Title="Banabet">

    <TabBar>

        <ShellContent
        Title="Home"
        Icon="menu_home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

        <ShellContent
        Title="Asistencia"
        Icon="menu_asistencia"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="HomePage" />

        <ShellContent
        Title="Comunidad"
        Icon="menu_comunidad"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

        <ShellContent
        Title="Perfil"
        Icon="menu_perfil"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="ProfilePage" />

    </TabBar>

</Shell>
